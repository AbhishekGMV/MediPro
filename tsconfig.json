{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts", "api/index.ts"]
}
